 @model FractionCalcWeb.Models.Fraction

@{
    ViewBag.Title = "FractionCalculator";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .fraction-input {
            width: 300px;
            display: inline-block;
        }
        .fraction-divider {
            text-align: center;
        }
        .fraction-group {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .whole-number-input {
            width: 100px;
            margin-right: 10px; 
            text-align: right;
        }

        .operation {
            width: 100px; 
            display: inline-block;
        }

    </style>
</head>
<body>
    <div class="container">
        <h2 class="text-center my-4">Fraction Calculator</h2>
        <div class="row justify-content-center">
            @using (Html.BeginForm("FractionCalculator", "Fraction", FormMethod.Post))
            {
               
                <div class="form-group fraction-group">
                    <label for="amb1">Fraction 1</label>
                   <input type="number" class="form-control whole-number-input" id="amb1" name="amb1" placeholder="amb1" value="@Model.amb1" /> 
                    <input type="number" class="form-control fraction-input" id="ham1" name="ham1" placeholder="ham1" value="@Model.ham1" />
                    <span class="fraction-divider">/</span>
                    <input type="number" class="form-control fraction-input" id="hayt1" name="hayt1" placeholder="hayt1" value="@Model.hayt1" />
                 </div> 
               @*  <div class="form-group text-center">
                    <select>
                        <option type="submit" class="btn btn-info" id="add" value="add" name="calculate">+</option>
                        <option type="submit" class="btn btn-danger" id="min" value="min" name="min">-</option>
                        <option type="submit" class="btn btn-warning" id="sub" value="sub" name="sub">*</option>
                        <option type="submit" class="btn btn-default" id="div" value="div" name="div">/</option>
                
                    </select>
                    </div> *@
                <div class="form-group text-center">
                    <label for="operation">Select Operation:</label> 
                    <select class="form-control operation" id="operation" name="calculate">
                        <option value="add">+</option>
                        <option value="min">-</option>
                        <option value="sub">*</option>
                        <option value="div">/</option>
                    </select>
                </div> 
   
                <div class="form-group fraction-group">
                    <label for="ham2">Fraction 2</label>
                    <input type="number" class="form-control whole-number-input" id="amb2" name="amb2" placeholder="amb2" value="@Model.amb2" />
                    <input type="number" class="form-control fraction-input" id="ham2" name="ham2" placeholder="ham2" value="@Model.ham2" />
                    <span class="fraction-divider">/</span>
                    <input type="number" class="form-control fraction-input" id="hayt2" name="hayt2" placeholder="hayt2" value="@Model.hayt2" />
                </div>

                <div class="form-group text-center">
                    <button type="submit" id="calculate" vale="calculate" name="calculate">= </button>
                </div>

                  <div class="form-group fraction-group">
                    <label for="ham3">Result</label>
                    <input type="text" class="form-control whole-number-input" id="amb3" name="amb3" placeholder="amb3" value="@Model.amb3" readonly />
                    <input type="text" class="form-control fraction-input" id="ham3" name="ham3" value="@Model.ham3" readonly />
                    <span class="fraction-divider">/</span>
                    <input type="text" class="form-control fraction-input" value="@Model.hayt3" readonly />

                </div> 
              @*    @if (Model.ham3.HasValue && Model.hayt3.HasValue)
                {
                    <div class="form-group fraction-group">
                        <label>Result</label>
                        <div class="mixed-fraction">
                            @if (Model.amb3.HasValue)
                            {
                                <input type="text" class="form-control whole-number-input" value="@Model.amb3" readonly />
                            }
                            <input type="text" class="form-control fraction-input" value="@Model.ham3" readonly />
                            <span class="fraction-divider">/</span>
                            <input type="text" class="form-control fraction-input" value="@Model.hayt3" readonly />
                        </div>
            </div> *@
                } 

            
            }
        </div>
    </div>
</body>
</html>